<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.light.timetable.mapper.CalendarMapper">

    <select id="getTerms" resultType="String">
        select term
        from light_timetable.calendar_table
        where userid = #{userid};
    </select>

    <insert id="insertCalendar" parameterType="map">
        insert into light_timetable.calendar_table (userid, term, calendar)
        values (#{userid}, #{term}, #{calendar});
    </insert>

    <update id="updateCalendar" parameterType="map">
        update light_timetable.calendar_table
        set calendar=#{calendar}
        where userid = #{userid}
          and term = #{term};
    </update>

    <select id="getCalendar" resultType="String">
        select calendar
        from light_timetable.calendar_table
        where userid = #{userid}
          and term = #{term};
    </select>

    <delete id="deleteCalendar">
        delete
        from light_timetable.calendar_table
        where userid = #{userid};
    </delete>

    <insert id="shareCalendar" parameterType="map">

        insert into light_timetable.shared_table (userId, `key`, calendar)
        VALUES (#{userid}, #{key}, #{calendar});

    </insert>

    <select id="getSharedCalendar" resultType="String">
        select calendar
        from light_timetable.shared_table
        where `key`=#{key};
    </select>

    <delete id="deleteSharedCalendar" parameterType="int">

        delete from light_timetable.shared_table
        where userId=#{userid};

    </delete>

</mapper>